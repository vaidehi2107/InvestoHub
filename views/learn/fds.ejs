<section class="fd-section calculator-section">
  <div class="calc-card">
    <div class="calc-left">
      <h2 class="calc-title">FD Calculator</h2>
      
      <div class="input-group-row">
        <div class="input-box">
          <label>Fixed Deposit amount</label>
          <div class="input-wrapper">
            <span>₹</span>
            <input type="number" id="principal" value="100000">
          </div>
        </div>
        
        <div class="input-box">
          <label>Rate of Interest</label>
          <div class="input-wrapper">
            <input type="number" id="rate" value="8">
            <span>%</span>
          </div>
        </div>
      </div>

      <div class="input-group-row">
        <div class="input-box">
          <label>Fixed Deposit Tenure</label>
          <div class="input-wrapper">
            <input type="number" id="tenure" value="3">
          </div>
        </div>
        <div class="input-box">
          <label>&nbsp;</label>
          <select id="tenurePeriod">
            <option value="years">Years</option>
            <option value="months">Months</option>
          </select>
        </div>
      </div>

      <button class="calc-btn" onclick="calculateFD()">Calculate</button>
    </div>

    <div class="calc-right">
      <div class="result-item">
        <p>Maturity Amount</p>
        <h3 id="maturity-amount">₹1,26,824</h3>
      </div>
      <div class="result-item">
        <p>Total Interest amount</p>
        <h4 id="interest-amount">₹26,824</h4>
      </div>
      <div class="result-item">
        <p>Principal Amount</p>
        <h4 id="principal-display">₹1,00,000</h4>
      </div>
    </div>
  </div>
  
</section>

