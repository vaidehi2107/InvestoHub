<script>
function calculateFD() {
  const p = parseFloat(document.getElementById('principal').value);
  const r = parseFloat(document.getElementById('rate').value) / 100;
  const t = parseFloat(document.getElementById('tenure').value);
  
  // Quarterly compounding (standard for Indian Banks)
  const n = 4; 
  const amount = p * Math.pow((1 + r/n), (n * t));
  const interest = amount - p;

  document.getElementById('maturity-amount').innerText = "₹" + Math.round(amount).toLocaleString('en-IN');
  document.getElementById('interest-amount').innerText = "₹" + Math.round(interest).toLocaleString('en-IN');
  document.getElementById('principal-display').innerText = "₹" + p.toLocaleString('en-IN');
}
</script>

