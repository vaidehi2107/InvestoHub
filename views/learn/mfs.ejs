<script>
let currentMode = 'sip';

function switchMode(mode) {
  currentMode = mode;
  const sipBtn = document.getElementById('btn-sip');
  const lumpsumBtn = document.getElementById('btn-lumpsum');
  const label = document.getElementById('amount-label');
  const heading = document.getElementById('calc-heading');

  if (mode === 'sip') {
    sipBtn.className = 'btn btn-sm btn-dark';
    lumpsumBtn.className = 'btn btn-sm btn-outline-dark';
    label.innerText = 'Monthly Investment';
    heading.innerText = 'SIP Calculator';
  } else {
    sipBtn.className = 'btn btn-sm btn-outline-dark';
    lumpsumBtn.className = 'btn btn-sm btn-dark';
    label.innerText = 'Lumpsum Investment';
    heading.innerText = 'Lumpsum Calculator';
  }
  calculateMF(); // Re-calculate instantly on switch
}

function calculateMF() {
  const P = parseFloat(document.getElementById('mfAmount').value);
  const annualRate = parseFloat(document.getElementById('mfRate').value);
  const years = parseFloat(document.getElementById('mfTenure').value);
  
  const r = annualRate / 100;
  let maturityValue = 0;
  let totalInvested = 0;

  if (currentMode === 'sip') {
    const i = r / 12;
    const n = years * 12;
    // SIP Formula: M = P × ({[1 + i]^n – 1} / i) × (1 + i)
    maturityValue = P * ((Math.pow(1 + i, n) - 1) / i) * (1 + i);
    totalInvested = P * n;
  } else {
    // Lumpsum Formula: A = P(1 + r)^t (Compounded annually for simplicity)
    maturityValue = P * Math.pow((1 + r), years);
    totalInvested = P;
  }

  const wealthGained = maturityValue - totalInvested;

  document.getElementById('mf-maturity').innerText = "₹" + Math.round(maturityValue).toLocaleString('en-IN');
  document.getElementById('mf-returns').innerText = "₹" + Math.round(wealthGained).toLocaleString('en-IN');
  document.getElementById('mf-invested').innerText = "₹" + Math.round(totalInvested).toLocaleString('en-IN');
}

// Initial calculation
calculateMF();
</script>